<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/home.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="/home">Home</a>
      <a href="/upload-image-page">Upload File</a>
    </div>
    <div class="cards">
      <% users.forEach(function(user,index){ %>
      <div class="card">
        <% if(user.gender==="male"){ %>
        <img src="/image/avatar_nam.png" alt="Avatar" style="width: 100%" />
        <% } else{ %>
        <img src="/image/avatar_nu.png" alt="Avatar" style="width: 100%" />
        <% } %>
        <div class="container">
          <h4><b><%=user.firstName%></b></h4>
          <p><%=user.address%></p>
        </div>
        <div class="card_list_btn">
          <button class="card_btn">
            <a href="about/<%=user.id%>" target="_blank">Detail</a>
          </button>
          <form action="/user-ready-edit/<%=user.id%>" method="post">
            <input type="hidden" value="<%=user.id%>" name="userId" />
            <button class="card_btn" type="submit" style="width: 100%">
              Edit
            </button>
          </form>
          <form action="/delete-user" method="post">
            <input type="hidden" value="<%=user.id%>" name="userId" />
            <button class="card_btn" type="submit" style="width: 100%">
              Delete
            </button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>
    <div class="form_wrapper">
      <form action="/create-new-user" method="post">
        <label for="fname">First Name</label>
        <input
          type="text"
          id="fname"
          name="firstname"
          placeholder="Your name.."
        />

        <label for="lname">Last Name</label>
        <input
          type="text"
          id="lname"
          name="lastname"
          placeholder="Your last name.."
        />

        <label for="email">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Your email.."
        />

        <label for="gender">Gender</label>
        <select id="gender" name="gender">
          <option value="male">Male</option>
          <option value="female">Female</option>
          <option value="other">Other</option>
        </select>

        <label for="address">Address</label>
        <select id="address" name="address">
          <option value="Ha Noi">Hà Nội</option>
          <option value="Hai Phong">Hải Phòng</option>
          <option value="Ho Chi Minh">Hồ Chí Minh</option>
        </select>

        <button type="submit">Add New User</button>
      </form>
    </div>
  </body>
</html>
